rules_version = '2';

// Reglas de seguridad para Firebase Storage
// Permite a los usuarios autenticados leer y escribir
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura pública de todas las imágenes
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Permitir escritura solo a usuarios autenticados
    match /course_thumbnails/{imageId} {
      allow write: if request.auth != null;
    }
    
    match /category_thumbnails/{imageId} {
      allow write: if request.auth != null;
    }
    
    match /user_images/{imageId} {
      allow write: if request.auth != null;
    }
    
    // Carpeta general para otros archivos
    match /{folder}/{imageId} {
      allow write: if request.auth != null;
    }
  }
}
